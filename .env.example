# Brain Tumor Classification - Environment Variables
# Copy this file to .env and update with your actual values

# ============== Dataset Configuration ==============
# Path to your brain tumor dataset
# Example: C:\Users\YourName\Documents\brain_tumor_dataset
# Example: /home/user/datasets/brain_tumor_dataset
DATASET_PATH=path/to/your/dataset

# Dataset directories
TRAIN_DIR=${DATASET_PATH}/Training
TEST_DIR=${DATASET_PATH}/Testing

# ============== Model Configuration ==============
# Image size (default: 224 for transfer learning compatibility)
IMG_SIZE=224

# Batch size (adjust based on your GPU memory)
# Recommended: 32 (GPU), 16 (Limited GPU), 8 (CPU)
BATCH_SIZE=32

# Number of training epochs
EPOCHS=20

# Learning rate
LEARNING_RATE=0.001

# ============== Training Configuration ==============
# Validation split (percentage of training data for validation)
VALIDATION_SPLIT=0.2

# Early stopping patience (epochs to wait before stopping)
EARLY_STOPPING_PATIENCE=5

# Reduce LR patience (epochs to wait before reducing learning rate)
REDUCE_LR_PATIENCE=3

# Reduce LR factor (multiply learning rate by this value)
REDUCE_LR_FACTOR=0.5

# ============== Model Save Paths ==============
# Directory to save trained models
MODEL_SAVE_DIR=./models

# Model filenames
CNN_MODEL_PATH=${MODEL_SAVE_DIR}/best_brain_tumor_cnn_model.h5
VGG16_MODEL_PATH=${MODEL_SAVE_DIR}/best_brain_tumor_vgg16_model.h5
VGG19_MODEL_PATH=${MODEL_SAVE_DIR}/best_brain_tumor_vgg19_model.h5
MOBILENET_MODEL_PATH=${MODEL_SAVE_DIR}/best_brain_tumor_mobilenet_model.h5
RESNET_MODEL_PATH=${MODEL_SAVE_DIR}/best_brain_tumor_resnet_model.h5

# ============== Output Paths ==============
# Directory for plots and visualizations
PLOTS_DIR=./plots

# Directory for results and metrics
RESULTS_DIR=./results

# ============== GPU Configuration ==============
# TensorFlow GPU memory growth (true/false)
TF_GPU_MEMORY_GROWTH=true

# GPU device ID (use -1 for CPU, 0 for first GPU, 1 for second GPU, etc.)
GPU_DEVICE_ID=0

# Mixed precision training (can speed up training on modern GPUs)
USE_MIXED_PRECISION=false

# ============== Random Seed ==============
# For reproducibility
RANDOM_SEED=42

# ============== Logging ==============
# Verbosity level (0=silent, 1=progress bar, 2=one line per epoch)
VERBOSE=1

# Enable TensorBoard logging (true/false)
ENABLE_TENSORBOARD=false

# TensorBoard log directory
TENSORBOARD_LOG_DIR=./logs

# ============== Optional: Advanced Settings ==============
# Data augmentation parameters
ROTATION_RANGE=20
WIDTH_SHIFT_RANGE=0.2
HEIGHT_SHIFT_RANGE=0.2
SHEAR_RANGE=0.2
ZOOM_RANGE=0.2
HORIZONTAL_FLIP=true

# ============== Optional: Deployment ==============
# Flask server configuration (if deploying as web app)
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false

# Streamlit configuration (if deploying with Streamlit)
STREAMLIT_PORT=8501
